# =============================================================================
# SCOREBOARD APPLICATION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your specific values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase URL (required) - Found in your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public API key (required) - Found in your Supabase project settings
# DO NOT use the service_role key in production environments
SUPABASE_KEY=your-supabase-anon-key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment (development, production)
NODE_ENV=production

# Server port for the application
PORT=3000

# =============================================================================
# OPTIONAL PERFORMANCE TUNING
# =============================================================================
# Maximum concurrent connections (default: 100)
# MAX_CONNECTIONS=100

# Socket.io ping timeout in ms (default: 5000)
# SOCKET_PING_TIMEOUT=5000

# Socket.io ping interval in ms (default: 25000)
# SOCKET_PING_INTERVAL=25000

# =============================================================================
# OPTIONAL DEBUGGING SETTINGS
# =============================================================================
# Debug mode (uncomment to enable)
# DEBUG=scoreboard:*

# Verbose logging (uncomment to enable)
# VERBOSE=true

# =============================================================================
# SECURITY SETTINGS (Advanced)
# =============================================================================
# CORS allowed origins (comma-separated, default: *)
# CORS_ORIGINS=*

# Session secret (used for cookies if implemented)
# SESSION_SECRET=replace-with-a-secure-random-string 